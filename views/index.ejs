<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <h1></h1>
    <img src="https://media.tenor.com/lO6HqZ3I2dIAAAAi/e.gif" width="200" height="200">
    <form id="dataForm">
        <p>Registre-se, escritor!</p>
        <input type="username" name="username" placeholder="Nome">
        <input type="email" name="email" placeholder="Email">
        <input type="password" name="password" placeholder="Senha">
        <input type="password" name="cod" placeholder="Codigo de Criador">
        <button type="submit">
            <span> Entrar </span>
        </button>
    </form>
    <p style="margin-top: 5px; margin-bottom: 0; margin-left: 0; margin-right: 0;">Já tem uma conta? faça <a href="/login">Login</a></p>
    <p style="margin-top: 0px; margin-bottom: 10px; margin-left: 0; margin-right: 0;">Entrar como <a href="/home">Usuario</a></p>
    <script>
        $(document).ready(function () {
            $('#dataForm').on('submit', function (event) {
                event.preventDefault(); // Impede o envio padrão do formulário
                const formData = $(this).serialize(); // Serializa os dados do formulário
                $.ajax({
                    url: '/auth/register', // URL da requisição
                    type: 'POST', // Método da requisição
                    data: formData, // Dados a serem enviados
                    dataType: 'json', // Tipo de dados que você espera de volta
                    success: function (response) {
                        console.log(response.message)
                        window.location.href = '/login';
                    },
                    error: function (xhr) {
                        // Se houver um erro, exiba uma mensagem
                        const errorMsg = xhr.responseJSON ? xhr.responseJSON.message : 'Erro ao fazer requisição.';
                        console.log(errorMsg);
                    }
                });
            });
        });
    </script>
</body>

</html>