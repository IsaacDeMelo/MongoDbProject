<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>App</title>
    <style>
        * {
            box-sizing: border-box;
        }
        body {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            background-color: rgb(255, 255, 255);
          
        }
        #menu {
            width: 80%;
            height: 100%;
            background-color: #f1f1f1;
            color: #000000;
            position: fixed;
            left: -80%;
            top: 0;
            overflow-x: hidden;
            transition: 0.5s;
            border-top-right-radius: 20px;
            border-bottom-right-radius: 20px;
            border-right: 2px solid rgb(190, 190, 190);
        }
        #menu a {
            padding: 10px 15px;
            text-decoration: none;
            font-size: 20px;
            color: #000000;
            display: block;
        }
        #menu a:hover {
            background-color: #d3d3d3;
        }
        #perfil {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            transition: margin-left 0.5s;
            background-color: rgb(197, 197, 197);
            border: 2px solid rgb(151, 151, 151); 
            margin: 10px;
            border-radius: 20px; 
        }
        .chars{
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            transition: margin-left 0.5s;
            background-color: rgb(197, 197, 197);
            border: 2px solid rgb(151, 151, 151); 
            margin: 10px;
            border-radius: 20px;
            width: 70%; 
        }
        #perfil h2 {
            margin-bottom: 10px;
        }
        #perfil img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            border: 6px solid rgb(151, 151, 151);
            margin: 20px; 
        }
        #perfil p {
            margin-top: 0;
        }
        .manage{
            position: absolute;
            bottom: 0;
            width: 100%;
        }
        #conteudo {
            margin-left: 0;
            padding: 20px;
            transition: margin-left 0.5s;
        }
        .charIcon{
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-size: cover;
            background-position: center;
        }
    </style>
</head>
<body>

    <div id="menu">
        <div id="perfil">
            <img src="<%= currentUser.perfil %>" alt="Foto de Perfil">
            <p><%= currentUser.name %></p>
        </div>
        <div style="width: 100%; display: flex; justify-content: center; align-items: center;">
        <div class="chars">
            <% for (let i = 0; i < char.length; i++){%>
                <h3>Personagem</h3>
                <div class="charIcon" style="background-image: url(<%=char[i].perfil%>);"></div>
                <p><%=char[i].name%></p>
            <%}%>
        </div>
        </div>
        <div class="manage">
        <a href="#">Configurações</a>
        <a href="/">Sair</a>
        </div>
    </div>
    <div id="conteudo">
        
    </div>

    <script>
        function abrirMenu() {
            document.getElementById("menu").style.left = "0";
        }

        function fecharMenu() {
            document.getElementById("menu").style.left = "-80%";
        }
        window.addEventListener('keydown', (e) => {
            switch (e.key){
                case "ArrowDown":
                    abrirMenu();
                    break
                case "ArrowUp":
                    fecharMenu();
                    break
            }
        })
    </script>

</body>
</html>